<!DOCTYPE html>

<html>
    <head>
        <%- include("../pieces/head.ejs") %>
        <title><%= user.username %>#<%= user.discriminator %> â€“ TypicalBot</title>
    </head>
    <body>
        <%- include("../pieces/navigation.ejs") %>

        <div class="frame row">
            <% if (auth) { %>
                <div class="frame-nav scroll">
                    <% if (guilds.filter(g => g.isMember).length) { %>
                        <p class="title">Manage a Server</p>
                        <ul class="guilds">
                            <% guilds.filter(g => g.isMember).sort((a,b) => { if (a.name.toLowerCase() < b.name.toLowerCase()) return -1; if (a.name.toLowerCase() > b.name.toLowerCase()) return 1; return 0}).forEach(g => { %>
                                <li>
                                    <a href="/guilds/<%= g.id %>">
                                        <% if (g.icon) { %>
                                            <img class="aling-top" src="https://cdn.discordapp.com/icons/<%= g.id %>/<%= g.icon %>.jpg" />
                                        <% } else { %>
                                            <canvas class="guild-icon align-top" id="<%= g.id %>" data-guild-name="<%= g.name %>" width="30" height="30"></canvas>
                                        <% } %>
                                        <%= g.name %>
                                    </a>
                                </li>
                            <% }) %>
                        </ul>

                        <hr class="my-2">
                    <% } %>
                    <p class="title">Invite to a Server</p>
                    <ul class="guilds">
                        <% guilds.filter(g => !g.isMember).sort((a,b) => { if (a.name.toLowerCase() < b.name.toLowerCase()) return -1; if (a.name.toLowerCase() > b.name.toLowerCase()) return 1; return 0}).forEach(g => { %>
                            <li>
                                <a href="/guilds/<%= g.id %>">
                                    <% if (g.icon) { %>
                                        <img class="aling-top" src="https://cdn.discordapp.com/icons/<%= g.id %>/<%= g.icon %>.jpg" />
                                    <% } else { %>
                                        <canvas class="guild-icon align-top" id="<%= g.id %>" data-guild-name="<%= g.name %>" width="30" height="30"></canvas>
                                    <% } %>
                                    <%= g.name %>
                                </a>
                            </li>
                        <% }) %>
                    </ul>
                </div>
            <% } %>

            <div class="frame-page scroll" <% if (!auth) { %> style="width: 100%;" <% } %>>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/">Home</a></li>
                        <li class="breadcrumb-item"><a href="/user"><%= user.username %>#<%= user.discriminator %></a></li>
                    </ol>
                </nav>
                <div <% if (!auth) { %> class="container" <% } %>>
                    
                    <div class="box">
                        <p class="title">Information</p>
                        <hr class="separate">

                        <div class="info-box">
                            <div class="topic">
                                <img class="align-top" src="<%= user.avatarURL ? user.avatarURL : "" %>">
                                <div class="info">
                                    <p bold style="font-size: 22px;"><%= user.username %>#<%= user.discriminator %></p>
                                    <hr class="my-2">
                                    <p class="text"><i class="fa fa-puzzle-piece"></i> 2 <b>Beeps</b></p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="box">
                        <p class="title">Actions</p>
                        <hr class="separate">

                        <ul class="guild-actions">
                            <li>
                                <% if (user.lightTheme) { %>
                                    <a href="/user/theme/dark"><i class="fa fa-cog"></i> Theme: Switch to Dark</a>
                                <% } else { %>
                                    <a href="/user/theme/light"><i class="fa fa-cog"></i> Theme: Switch to Light</a>
                                <% } %>
                            </li>
                            <% if (user.apitoken) { %>
                                <li><a><i class="fa fa-cog"></i> API Token: <%= user.apitoken %></a></li>
                            <% } %>
                            
                        </ul>
                    </div>
                    
                    <hr class="my-4">
                </div>
            </div>
        </div>
    </body>
</html>
